{
  "name": "LaTeX",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "GitHub.copilot",
        "James-Yu.latex-workshop"
      ],
      "settings": {
        "editor.unicodeHighlight.allowedCharacters": {
          "，": true,
          "．": true,
          "：": true
        },
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": ["%DOC_EXT%"]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "compile",
            "tools": ["latexmk"]
          }
        ]
      }
    }
  }
}
